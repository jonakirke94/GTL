@model GTL.Application.Features.Loans.Commands.CreateLoan.CreateLoanCommand

@{
    ViewData["Title"] = "CreateLoan";
}

@{
    if (ViewBag.Status != null)
    {
        var model = ViewBag.Status as Status;
        <partial name="_StatusMessage" model="model" />
    }
}



<div class="flex-wrapper">

    <div class="flex-container">

        <form asp-action="CreateLoan" class="buttons">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="LoanerCardBarcode" class="control-label">Loanercard Barcode</label>
                <input asp-for="LoanerCardBarcode" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="CopyBarcode" class="control-label">Copy Barcode</label>
                <input asp-for="CopyBarcode" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="LibraryName" class="control-label">Library name</label>
                <select asp-for="LibraryName" class="form-control">
                    <option value="Accounting">Accounting</option>
                    <option value="BusinessSales">BusinessSales</option>
                    <option value="NationalSales">NationalSales</option>
                    <option value="Service">Service</option>
                    <option value="TechnicalSales">TechnicalSales</option>
                </select>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>


        <img src="~/images/book_lover.svg" class="img" alt="" />
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
