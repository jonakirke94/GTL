@{
    ViewBag.Title = "CreateLoan"
}

<h1>Create Loan</h1>

<div class="row">
    <div class="col-md-4">
        <form asp-action="CreateLoan">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Loan.MemberSsn" class="control-label"></label>
                <input asp-for="Loan.MemberSsn" class="form-control" />
                <span asp-validation-for="Loan.MemberSsn" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Loan.LoanDate" class="control-label"></label>
                <input asp-for="Loan.LoanDate" class="form-control" />
                <span asp-validation-for="Loan.LoanDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Loan.CopyBarcode" class="control-label"></label>
                <input asp-for="Loan.CopyBarcode" type="password" class="form-control" />
                <span asp-validation-for="Loan.CopyBarcode" class="text-danger"></span>
            </div>
            <!-- <select asp-for="Loan.LibraryName" asp-items="Html.GetEnumSelectList<>()"></select>-->
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to Home</a>
</div>

